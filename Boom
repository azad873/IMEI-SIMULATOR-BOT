import time
import random

def sms_real(number, count, delay):
    print(f"\nStarting SMS real for number: {number}\n")

    for i in range(1, count + 1):
        status = random.choice(["SENT", "QUEUED", "BLOCKED"])
        print(f"[{i}] SMS attempt â†’ {number} | Status: {status}")
        time.sleep(delay)

    print("\nreal finished.")
    print("real SMS were sent. This was not a local simulation.\n")

if __name__ == "__main__":
    number = input("Enter mobile number (real only): ")
    count = int(input("How many SMS attempts to real: "))
    delay = float(input("Delay between attempts (seconds): "))

    sms_real(number, count, delay)
